import random
from flask import Flask

app = Flask(__name__)

facts_list = ["1","2","3","4","5","6","7"]
coin = ["Орёл", "Решка"]

@app.route("/")
def hello_world():
    return '<a href="/random_fact"> рандомные числа </a>' '<a href="/coin_game"> игра в монетку </a>'
@app.route("/random_fact")
def random_fact():
    return f'<p>{random.choice(facts_list)}</p>'
app.run(debug=True)

@app.route("/coin_game")
def coin_game():
    return f'<p>{random.choice(coin)}</p>'
app.run(debug=True)
